---
export interface AboutStat {
  number: number;
  suffix?: string;
  label: string;
}

export interface Props {
  image?: string;
  imageAlt?: string;
  badgeText?: string;
  title?: string;
  paragraphs?: string[];
  stats?: AboutStat[];
}

const {
  image = "/img/about.jpg",
  imageAlt = "Constructors Team & Fleet",

  badgeText = "About Us",

  title = "10+ years of excellence",

  paragraphs = [
    "Founded in 1998, Constructors has grown to become one of the largest and most trusted heavy equipment providers in United States.",
    "With a fleet of over 250 modern units, nationwide branches, and more than 400 certified operators, we deliver reliable solutions for infrastructure, mining, energy, and property projects across the archipelago.",
  ],

  stats = [
    { number: 250, suffix: "+", label: "Units Ready to Deploy" },
    { number: 15, label: "Branches Nationwide" },
    { number: 1500, suffix: "+", label: "Projects Completed" },
    { number: 400, suffix: "+", label: "Certified Operators" },
  ],
} = Astro.props;
---

<section class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- IMAGE -->
      <div>
        <img
          src={image}
          alt={imageAlt}
          class="rounded-2xl shadow-2xl"
        />
      </div>
      <!-- CONTENT -->
      <div>
        <!-- BADGE -->
        <div class="inline-block px-4 py-2 bg-primary-soft text-primary-dark rounded-full font-semibold mb-6">
          {badgeText}
        </div>

        <!-- TITLE -->
        <h2 class="font-display text-4xl md:text-5xl text-dark mb-6">
          {title}
        </h2>

        <!-- PARAGRAPHS -->
        <div class="post-content text-lg text-steel-gray space-y-4 mb-8">
          {paragraphs.map((p) => <p>{p}</p>)}
        </div>

        <!-- STATS GRID with Animated Counters -->
        <div class="grid grid-cols-2 gap-8">
          {stats.map((s) => (
            <div>
              <div
                class="text-4xl font-display text-primary font-bold"
                data-animate
                data-counter={s.number}
                data-suffix={s.suffix || ""}
              >
                0{s.suffix}
              </div>

              <p class="text-steel-gray">{s.label}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>
---
import { Image } from 'astro:assets'
import { Icon } from 'astro-icon/components'
import SideImage from '@src/assets/Fluid-Plumbing-Kettering-Toilet-Replacement.jpg'
import Button from './Button.astro'

export interface AboutStat {
	number: number
	suffix?: string
	label: string
}

const stats: AboutStat[] = [
	{ number: 2800, suffix: '+', label: 'Residential & Commercial Projects' },
	{ number: 10, suffix: '+', label: "Years' of Plumbing Expertise" },
	{ number: 5, label: 'Star Ratings Across Google & Yelp' }
]
---

<section class="py-20 bg-white">
	<div class="max-w-7xl mx-auto px-4">
		<div class="grid lg:grid-cols-2 gap-16 items-center">
			{/* IMAGE */}
			<div>
				<Image
					src={SideImage}
					alt="Fluid Plumbing toilet replacement"
					class="rounded-2xl shadow-2xl aspect-1/1 object-cover"
				/>
			</div>
			{/* CONTENT */}
			<div>
				{/* BADGE */}
				<div class="inline-block px-4 py-2 bg-primary-soft text-primary-dark rounded-full font-semibold mb-6">
					About Us
				</div>

				{/* TITLE */}
				<h2 class="font-display text-4xl md:text-5xl text-dark mb-6">10+ years of plumbing excellence</h2>

				{/* PARAGRAPHS */}
				<div class="post-content text-lg text-steel-gray space-y-4 mb-8">
					<p>
						With over a decade of expertise under our team's belt, we're proud to serve the greater Dayton, OH
						area's plumbing needs.
					</p>
					<p>
						From clogged drains to toilet replacements, waters heater installs to water system overhauls, we do it
						all. Whether you need emergency residential plumbing in Kettering or Dayton, or are looking to schedule
						larger commercial plumbing projects, our team is always ready to accommodate.
					</p>
					<Button href="/about" variant="primary" size="md" class="!text-white !no-underline mt-6">
						About Us
						<Icon name="bi:arrow-right" />
					</Button>
				</div>

				{/* STATS GRID with Animated Counters */}
				{
					/* <div class="grid grid-cols-3 gap-8">
					{
						stats.map((s) => (
							<div>
								<div
									class="text-4xl font-display text-primary"
									data-animate
									data-counter={s.number}
									data-suffix={s.suffix || ''}
								>
									0{s.suffix}
								</div>

								<p class="text-steel-gray">{s.label}</p>
							</div>
						))
					}
				</div> */
				}
			</div>
		</div>
	</div>
</section>

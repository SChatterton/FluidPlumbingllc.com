---
export interface HighlightItem {
  number: number;      // contoh: 120
  suffix?: string;     // contoh: "+"
  label: string;       // contoh: "Projects Annually"
}

export interface Props {
  label?: string;
  title?: string;

  intro1?: string;
  intro2?: string;

  highlights?: HighlightItem[];

  image?: string;
  imageAlt?: string;
}

const {
  label = "WHY CHOOSE US",
  title = "READY TO START YOUR PROJECT?",

  intro1 = `
    If you’re looking for a reliable contractor to begin your construction project,
    you’re in the right place. Our team delivers end-to-end solutions for industrial,
    commercial, and infrastructure projects—from early planning to final execution.
  `,

  intro2 = `
    We provide a wide range of project services across multiple industries and project models.
    Whether you need equipment, manpower, full project management, or specialized
    engineering support, our experts are ready to assist. Let us help turn your
    plans into a successful, on-schedule build.
  `,

  highlights = [
    { number: 120, suffix: "+", label: "Projects Annually" },
    { number: 20, suffix: "+", label: "Industries Served" },
    { number: 98, suffix: "%", label: "Client Satisfaction" },
  ],

  image = "/img/equipments.jpg",
  imageAlt = "Construction Services",
} = Astro.props;
---
<section class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4">
    <div class="grid lg:grid-cols-2 gap-12 items-center">

      <!-- LEFT IMAGE -->
      <div>
        <img
          src={image}
          alt={imageAlt}
          class="rounded-2xl shadow-2xl"
        />
      </div>

      <div>
        <!-- LABEL -->
        {label && (
          <div class="inline-block px-4 py-2 bg-primary-soft text-primary-dark rounded-full font-semibold mb-6">
            {label}
          </div>
        )}

        <!-- TITLE -->
        {title && (
          <h2 class="font-display text-4xl md:text-5xl text-dark mb-6">
            {title}
          </h2>
        )}

        <!-- INTRO 1 -->
        {intro1 && (
          <p class="text-lg text-steel-gray mb-6">
            {intro1}
          </p>
        )}

        <!-- INTRO 2 -->
        {intro2 && (
          <p class="text-lg text-steel-gray mb-8">
            {intro2}
          </p>
        )}

        <!-- HIGHLIGHTS -->
        <div class="grid grid-cols-3 gap-8">
          {highlights.map((item) => (
            <div>
              <div
                class="text-4xl font-display text-primary font-bold"
                data-animate
                data-counter={item.number}
                data-suffix={item.suffix ?? ""}
                data-duration="2000"
              >
                0{item.suffix}
              </div>

              <p class="text-steel-gray">{item.label}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>
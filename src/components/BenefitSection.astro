---
import HeadingSection from './HeadingSection.astro'
import { Icon } from 'astro-icon/components'

export interface BenefitItem {
	icon: string
	title: string
	description: string
}

const items: BenefitItem[] = [
	{
		icon: 'bi:currency-dollar',
		title: 'Fair, upfront pricing',
		description: 'With no surprise add-ons'
	},
	{
		icon: 'bi:award',
		title: 'Professional work',
		description: 'No band-aid fixes, and no mess left behind'
	},
	{
		icon: 'bi:person-check',
		title: 'Real communication',
		description: "We explain what's going on in plain terms"
	},
	{
		icon: 'bi:houses',
		title: 'Local service',
		description: 'From a plumber that actually cares'
	}
]
---

<section class="bg-dark relative text-white">
	<div class="h-1 pipe-divider"></div>
	<div class="max-w-7xl mx-auto px-4 relative py-16 lg:py-20">
		<!-- HEADING -->
		<HeadingSection
			label=""
			title="We keep it simple"
			description="We show up, solve the problem, and respect your home like it's our own."
			align="center"
			variant="light"
		/>
		<!-- GRID -->
		<div class="grid md:grid-cols-2 lg:grid-cols-4 gap-10 text-center">
			{
				items.map((item) => (
					<div class="flex flex-col items-center">
						<Icon name={item.icon} class="text-6xl text-primary mb-4" />
						<h3 class="text-xl md:text-2xl font-bold mb-2">{item.title}</h3>
						<p class="text-metal-gray">{item.description}</p>
					</div>
				))
			}
		</div>
	</div>
	<div class="h-1 pipe-divider"></div>
</section>

---
import { Icon } from "astro-icon/components";

export interface Props {
  variant?: "primary" | "light";
  size?: "sm" | "md" | "lg";
  href?: string;
  icon?: string;
  disabled?: boolean;
  type?: "button" | "submit" | "reset";
  class?: string;
}

const {
  variant = "primary",
  size = "md",
  href,
  icon,
  disabled = false,
  type = "button",
  class: extraClass = "",
} = Astro.props;

// Size classes
const sizeClasses = {
  sm: "px-6 py-3 text-sm",
  md: "px-8 py-4 text-base",
  lg: "px-10 py-5 text-lg",
}[size];

// Variant classes
const variantClasses = {
  primary: "bg-primary hover:bg-primary-dark text-white",
  light: "bg-white hover:bg-gray-100 text-dark",
}[variant];

// Base style
const baseClass = `
  inline-flex items-center justify-center gap-2
  font-bold transition rounded-lg
  disabled:opacity-50 disabled:cursor-not-allowed
  max-sm:w-full
`;

const finalClass = `${baseClass} ${variantClasses} ${sizeClasses} ${extraClass}`;
---

{href ? (
  <a
    href={href}
    class={finalClass}
    aria-disabled={disabled}
  >
    {icon && <Icon name={icon} class="w-5 h-5" />}
    <slot />
  </a>
) : (
  <button type={type} class={finalClass} disabled={disabled}>
    {icon && <Icon name={icon} class="w-5 h-5" />}
    <slot />
  </button>
)}

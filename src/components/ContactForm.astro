---
import { Icon } from 'astro-icon/components'

export interface Props {
	title?: string
	submitLabel?: string
}

const { title = 'Contact Us', submitLabel = 'Send Message' } = Astro.props
---

<div class="bg-dark shadow-lg max-sm:px-4 p-10 rounded-2xl">
	<iframe src='https://online-booking.workiz.com/?ac=1a82aaf9d2ea23e707b046944106c5e8fb42ea71ebad2a64f83e2e02149fb69e' width="100%" height="700px" style='border:none;'></iframe>
	<form action="#" class="space-y-4 sm:space-y-6">
		<h3 class="text-2xl md:text-3xl font-medium text-white">{title}</h3>
		<!-- Name + Email -->
		<div class="grid md:grid-cols-2 gap-4 md:gap-6">
			<div class="flex flex-col gap-1">
				<label for="contact-form-name" class="text-white">Full Name <span class="text-rose-400">*</span></label>
				<input
					id="contact-form-name"
					type="text"
					placeholder="Your Name"
					class="w-full px-4 py-3 rounded-lg bg-white border border-gray-300 focus:border-primary focus:outline-none transition"
					required
				/>
			</div>
			<div class="flex flex-col gap-1">
				<label for="contact-form-tel" class="text-white">Telephone Number <span class="text-rose-400">*</span></label>
				<input
					id="contact-form-tel"
					type="tel"
					placeholder="Phone Number*"
					class="w-full px-4 py-3 rounded-lg bg-white border border-gray-300 focus:border-primary focus:outline-none transition"
					required
				/>
			</div>
		</div>

		<!-- Company + Phone -->
		<div class="flex flex-col gap-1">
			<label for="contact-form-email" class="text-white">Email Address <span class="text-rose-400">*</span></label>
			<input
				id="contact-form-email"
				type="email"
				placeholder="you@example.com"
				class="w-full px-4 py-3 rounded-lg bg-white border border-gray-300 focus:border-primary focus:outline-none transition"
				required
			/>
		</div>

		<!-- Select -->
		<div class="flex flex-col gap-1">
			<label for="contact-form-service" class="text-white">Service Needed <span class="text-rose-400">*</span></label>
			<select
				id="contact-form-service"
				class="w-full px-4 py-3 rounded-lg bg-white border border-gray-300 focus:border-primary focus:outline-none transition"
			>
				<option value="" disabled>Select Service</option>
				<option>Plumbing & Pipe Repair</option>
				<option>Drain Cleaning</option>
				<option>Pipe Repair</option>
				<option>Water Heaters</option>
				<option>Water Softeners</option>
				<option>Emergency Plumbing</option>
				<option>Commercial Projects</option>
				<option>Other (Please Specify)</option>
			</select>
		</div>

		<!-- Message -->
		<div class="flex flex-col gap-1">
			<label for="contact-form-message" class="text-white">Message <span class="text-rose-400">*</span></label>
			<textarea
				id="contact-form-message"
				rows="5"
				placeholder="Enter your message here..."
				class="w-full px-4 py-3 rounded-lg bg-white border border-gray-300 focus:border-primary focus:outline-none transition"
				required></textarea>
		</div>

		<!-- Submit Button -->
		<button
			type="submit"
			class="w-full bg-primary hover:bg-primary-dark text-white py-5 rounded-lg font-bold text-lg transition flex items-center justify-center gap-2"
		>
			<Icon name="bi:send-fill" class="text-xl" />
			{submitLabel}
		</button>
	</form>
</div>

---
import { Icon } from "astro-icon/components";

export interface Props {
  title?: string;
  submitLabel?: string;
}

const {
  title = "Messages",
  submitLabel = "Send Message",
} = Astro.props;
---

<div class="bg-dark shadow-lg max-sm:px-4 p-10 rounded-2xl">
  <form action="#" class="space-y-4 sm:space-y-6">
    <h3 class="text-2xl md:text-3xl font-medium text-white">{title}</h3>
    <!-- Name + Email -->
    <div class="grid md:grid-cols-2 gap-4 md:gap-6">
      <input
        type="text"
        placeholder="Full Name*"
        class="w-full px-6 py-4 rounded-lg bg-white border border-gray-300 focus:border-primary focus:outline-none transition"
        required
      />
      <input
        type="email"
        placeholder="Email Address*"
        class="w-full px-6 py-4 rounded-lg bg-white border border-gray-300 focus:border-primary focus:outline-none transition"
        required
      />
    </div>

    <!-- Company + Phone -->
    <div class="grid md:grid-cols-2 gap-4 md:gap-6">
      <input
        type="text"
        placeholder="Company Name"
        class="w-full px-6 py-4 rounded-lg bg-white border border-gray-300 focus:border-primary focus:outline-none transition"
      />
      <input
        type="tel"
        placeholder="Phone Number*"
        class="w-full px-6 py-4 rounded-lg bg-white border border-gray-300 focus:border-primary focus:outline-none transition"
        required
      />
    </div>

    <!-- Select -->
    <select
      class="w-full px-6 py-4 rounded-lg bg-white border border-gray-300 focus:border-primary focus:outline-none transition"
    >
      <option value="">Select Service</option>
      <option>Equipment Rental</option>
      <option>Operator Services</option>
      <option>Site Development</option>
      <option>Maintenance & Repair</option>
      <option>Consulting</option>
    </select>

    <!-- Message -->
    <textarea
      rows="5"
      placeholder="Project Details / Message*"
      class="w-full px-6 py-4 rounded-lg bg-white border border-gray-300 focus:border-primary focus:outline-none transition"
      required
    ></textarea>

    <!-- Submit Button -->
    <button
      type="submit"
      class="w-full bg-primary hover:bg-primary-dark text-white py-5 rounded-lg font-bold text-lg transition flex items-center justify-center gap-2"
    >
      <Icon name="bi:send-fill" class="text-xl" />
      {submitLabel}
    </button>
  </form>
</div>

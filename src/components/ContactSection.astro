---
import { Icon } from "astro-icon/components";
import ContactForm from "./ContactForm.astro";

export interface Props {
  officeTitle?: string;
  officeAddress?: string[];
  phones?: string[];
  emails?: string[];
  mapEmbedUrl?: string;
}

const {
  officeTitle = "Head Office â€“ California",
  officeAddress = [
    "2450 Sunrise Parkway, Suite A",
    "Sacramento, CA 95825, United States",
  ],
  phones = ["+1 (916) 555-2480", "Emergency 24/7: +1 (916) 555-9924"],
  emails = ["shane@fluidplumbingllc.com", "support@constructors.com"],
  mapEmbedUrl = "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3134.992558661515!2d-121.41029332350872!3d38.5803428717736!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x809ad111e2b3c2f7%3A0x4c8b94a1c5b7ef68!2sSacramento%20CA!5e0!3m2!1sen!2sus!4v1732789999999",
} = Astro.props;
---

<section id="contact" class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4">
    <div class="grid lg:grid-cols-2 gap-12">
      <!-- CONTACT INFO -->
      <div>
        <div class="space-y-8">
          <!-- OFFICE -->
          <div class="flex gap-6">
            <div class="w-16 h-16 bg-primary-soft rounded-lg flex items-center justify-center shrink-0">
              <Icon name="bi:geo-alt-fill" class="text-3xl text-primary" />
            </div>
            <div>
              <h3 class="text-2xl font-bold mb-2">{officeTitle}</h3>
              <p class="text-steel-gray whitespace-pre-line">
                {officeAddress.join("\n")}
              </p>
            </div>
          </div>

          <!-- PHONE -->
          <div class="flex gap-6">
            <div class="w-16 h-16 bg-primary-soft rounded-lg flex items-center justify-center shrink-0">
              <Icon name="bi:telephone-fill" class="text-3xl text-primary" />
            </div>
            <div>
              <h3 class="text-2xl font-bold mb-2">Phone</h3>
              <p class="text-steel-gray whitespace-pre-line">
                {phones.join("\n")}
              </p>
            </div>
          </div>

          <!-- EMAIL -->
          <div class="flex gap-6">
            <div class="w-16 h-16 bg-primary-soft rounded-lg flex items-center justify-center shrink-0">
              <Icon name="bi:envelope-fill" class="text-3xl text-primary" />
            </div>
            <div>
              <h3 class="text-2xl font-bold mb-2">Email</h3>
              <p class="text-steel-gray whitespace-pre-line">
                {emails.join("\n")}
              </p>
            </div>
          </div>

          <!-- GOOGLE MAPS -->
          <div class="mt-10">
            <iframe
              src={mapEmbedUrl}
              width="100%"
              height="350"
              style="border:0;"
              allowfullscreen=""
              loading="lazy"
              class="rounded-xl shadow-lg"
            ></iframe>
          </div>
        </div>
      </div>
      <!-- CONTACT FORM -->
      <ContactForm />
    </div>
  </div>
</section>

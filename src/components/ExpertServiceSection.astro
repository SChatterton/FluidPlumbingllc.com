---
import { Icon } from 'astro-icon/components'
import { Image } from 'astro:assets'
import WaterHeaterReplacement from '@src/assets/Water-Heater-Replacement-Kettering-2-1152x1536.jpg'

export interface Props {
	badgeText?: string
	title?: string
}

const { badgeText = '', title = 'Expert service. Real results.' } = Astro.props
---

<section class="py-20 bg-white">
	<div class="max-w-7xl mx-auto px-4">
		<div class="grid lg:grid-cols-2 gap-16 items-center">
			<!-- CONTENT -->
			<div>
				<!-- BADGE -->
				{
					badgeText && (
						<div class="inline-block px-4 py-2 bg-primary-soft text-primary-dark rounded-full font-semibold mb-6">
							{badgeText}
						</div>
					)
				}

				<!-- TITLE -->
				<h2 class="font-display text-4xl md:text-5xl text-dark mb-6">
					{title}
				</h2>

				<!-- PARAGRAPHS -->
				<div class="post-content text-lg text-steel-gray space-y-4 mb-8">
					<p>
						From clogged drains to water heater replacements, Fluid Plumbing delivers honest, high-quality work
						tailored to your home's needs. We don't oversell or waste your time - just solid repairs, clean job
						sites, and fast turnaround.
					</p>
					<p><strong>We specialize in:</strong></p>
					<ul>
						<li class="flex items-start gap-4">
							<Icon name="bi:check-circle-fill" class="text-2xl text-primary mt-0.5 shrink-0" />
							<p><strong>Drain cleaning</strong> with pro-level equipment to clear the toughest blockages.</p>
						</li>
						<li class="flex items-start gap-4">
							<Icon name="bi:check-circle-fill" class="text-2xl text-primary mt-0.5 shrink-0" />
							<p><strong>Water heater</strong> installs & replacements done right the first time.</p>
						</li>
						<li class="flex items-start gap-4">
							<Icon name="bi:check-circle-fill" class="text-2xl text-primary mt-0.5 shrink-0" />
							<p><strong>Leak repairs</strong>, repiping, and fixture upgrades.</p>
						</li>
						<li class="flex items-start gap-4">
							<Icon name="bi:check-circle-fill" class="text-2xl text-primary mt-0.5 shrink-0" />
							<p><strong>Small-scale excavation</strong> and pipe repairs when needed.</p>
						</li>
					</ul>
					<p>
						Whether you're dealing with an emergency or planning ahead, we'll explain your options clearly, give you
						a fair price, and treat your home like our own.
					</p>
				</div>
			</div>
			<!-- IMAGE -->
			<Image
				src={WaterHeaterReplacement}
				alt="Water heater replacement"
				class="aspect-16/10 lg:aspect-auto object-cover rounded-2xl shadow-2xl"
			/>
		</div>
	</div>
</section>

---
import { Icon } from "astro-icon/components";

export interface Props {
  question: string;
  answer: string;
}

const { question, answer } = Astro.props;
---

<div x-data="{ open: false }" class="bg-white rounded-xl shadow-md overflow-hidden">
  <button
    @click="open = !open"
    class="w-full px-8 py-6 text-left flex justify-between items-center"
  >
    <span class="text-xl font-semibold">{question}</span>

    <Icon
      name="bi:chevron-down"
      class="text-2xl text-primary duration-300"
      :class="open ? 'rotate-180' : 'rotate-0'"
    />
  </button>

  <div
    x-show="open"
    x-transition
    class="px-8 pb-6 text-steel-gray"
    style="display:none;"
  >
    {answer}
  </div>
</div>

---
export interface Props {
  title?: string;
  description?: string;
  image?: string;
  imageAlt?: string;
}

const {
  title,
  description,
  image = "src/img/hero3.jpg",
  imageAlt = "Page Heading Background",
} = Astro.props;
---

<section class="relative py-16 lg:py-20 overflow-hidden">
  <!-- BACKGROUND IMAGE -->
  <div class="absolute inset-0">
    <img
      src={image}
      alt={imageAlt}
      class="w-full h-full object-cover"
    />
    <div class="absolute inset-0 bg-linear-to-r from-black/90 via-black/70 to-black/60"></div>
  </div>

  <!-- CONTENT -->
  <div class="relative z-10 max-w-7xl mx-auto px-4 text-center">
    {title && (
      <h1 class="font-display text-5xl md:text-6xl text-white mb-3 leading-tight">
        {title}
      </h1>
    )}

    <div class="inline-flex h-1 pipe-divider w-32 mx-auto mb-4"></div>
    {description && (
      <p class="text-lg md:text-xl text-gray-200 max-w-4xl mx-auto leading-relaxed">
        {description}
      </p>
    )}
  </div>
</section>
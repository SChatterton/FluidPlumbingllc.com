---
export interface Props {
  label?: string;
  title?: string;
  description?: string;
  align?: "left" | "center";
  variant?: "dark" | "light";
}

const {
  label,
  title,
  description,
  align = "center",
  variant = "dark",
} = Astro.props;

const textColorClass = variant === "dark" ? "text-dark" : "text-white";
const textColorSubClass = variant === "dark" ? "text-steel-gray" : "text-metal-gray";
const alignClass = align === "center" ? "text-center" : "text-left";
const descWidth = align === "center" ? "mx-auto" : "";
---

<div class={`${alignClass} mb-16`}>

  {label && (
    <div class="inline-block px-4 py-2 bg-primary-soft text-primary-dark rounded-full font-semibold mb-4">
      {label}
    </div>
  )}

  {title && (
    <h2 class={`font-display text-4xl md:text-5xl mb-4 ${textColorClass}`}>
      {title}
    </h2>
  )}

  {description && (
    <p class={`text-lg max-w-2xl ${descWidth} ${textColorSubClass}`}>
      {description}
    </p>
  )}
</div>

---
export interface StepItem {
	title: string
	description: string
}

export interface Props {
	title?: string
	description?: string
}

const { title = 'Our Process', description = 'Transparent, fast, and reliable â€” from first contact to project completion.' } =
	Astro.props

const steps: StepItem[] = [
	{
		title: 'Scheduling',
		description: 'Site visit and professional needs assessment within 24 hours'
	},
	{
		title: 'Inspection',
		description: 'Thorough system check to identify issues, risks, and code concerns'
	},
	{
		title: 'Estimation',
		description: 'Upfront, itemized pricing with clear options and zero surprise fees'
	},
	{
		title: 'Execution',
		description: 'Skilled repairs and installations done cleanly, safely, and efficiently'
	},
	{
		title: 'Satisfaction',
		description: 'Final walkthrough to ensure everything works exactly as expected'
	},
	{
		title: 'Completion',
		description: 'Workspace cleaned, system tested, and warranty details clearly explained'
	}
]
---

<section class="bg-dark relative text-white">
	<div class="h-1 pipe-divider"></div>
	<div class="max-w-7xl mx-auto px-4 relative py-16 lg:py-20">
		<!-- HEADING -->
		<div class="text-center mb-16">
			<h2 class="font-display text-4xl md:text-5xl text-white mb-4">
				{title}
			</h2>

			{description && <p class="text-metal-gray text-lg max-w-3xl mx-auto">{description}</p>}
		</div>

		<!-- GRID STEPS -->
		<div class="grid md:grid-cols-2 lg:grid-cols-6 gap-6">
			{
				steps.map((step, index) => (
					<div class="text-center">
						<div class="w-20 h-20 mx-auto mb-6 bg-primary text-white rounded-full flex items-center justify-center text-3xl font-bold">
							{index + 1}
						</div>
						<h3 class="text-xl font-bold mb-3">{step.title}</h3>
						<p class="text-metal-gray text-sm">{step.description}</p>
					</div>
				))
			}
		</div>
	</div>
	<div class="h-1 pipe-divider"></div>
</section>

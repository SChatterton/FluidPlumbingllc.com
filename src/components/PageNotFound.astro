---
import { Icon } from 'astro-icon/components'
---

<section class="min-h-screen bg-linear-to-br from-dark via-neutral-900 to-dark flex items-center justify-center px-4 py-20">
	<div class="max-w-4xl mx-auto text-center">
		<!-- 404 Big Number -->
		<div class="relative mb-12">
			<h1
				class="font-display text-[200px] md:text-[300px] font-bold leading-none text-transparent bg-clip-text bg-linear-to-r from-primary to-primary opacity-20 select-none"
			>
				404
			</h1>
			<div class="absolute inset-0 flex items-center justify-center">
				<div class="text-center">
					<Icon name="bi:cone-striped" class="text-primary text-8xl md:text-9xl mx-auto mb-6 animate-bounce" />
				</div>
			</div>
		</div>

		<!-- Content -->
		<div class="relative z-10 text-white space-y-6">
			<h2 class="font-display text-4xl md:text-5xl mb-4">Page not found</h2>

			<div class="inline-flex h-1 pipe-divider w-32 mx-auto mb-6"></div>

			<p class="text-xl md:text-2xl text-neutral-300 max-w-2xl mx-auto mb-12">
				Oops! Looks like the page you're looking for doesn't exist or has been moved.
			</p>

			<!-- Quick Links -->
			<div class="grid sm:grid-cols-3 gap-4 max-w-lg mx-auto mb-12">
				<a href="/" class="bg-white/10 hover:bg-primary backdrop-blur-sm rounded-lg p-4 transition group">
					<Icon
						name="bi:house-door-fill"
						class="text-3xl text-primary group-hover:text-white mx-auto mb-2 transition"
					/>
					<span class="text-white font-semibold">Home</span>
				</a>
				<a href="/services" class="bg-white/10 hover:bg-primary backdrop-blur-sm rounded-lg p-4 transition group">
					<Icon name="bi:gear-fill" class="text-3xl text-primary group-hover:text-white mx-auto mb-2 transition" />
					<span class="text-white font-semibold">Services</span>
				</a>
				<a href="/areas-we-serve" class="bg-white/10 hover:bg-primary backdrop-blur-sm rounded-lg p-4 transition group">
					<Icon name="bi:truck" class="text-3xl text-primary group-hover:text-white mx-auto mb-2 transition" />
					<span class="text-white font-semibold">Service Areas</span>
				</a>
			</div>

			<!-- CTA Buttons -->
			<div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
				<a
					href="/"
					class="border-2 border-primary bg-primary hover:bg-primary-dark hover:border-primary-dark text-white font-bold px-8 py-4 rounded-lg flex items-center gap-3 transition shadow-lg hover:shadow-2xl"
				>
					<Icon name="bi:arrow-left" class="text-xl" />
					Back to Home
				</a>

				<a
					href="/contact"
					class="border-2 border-primary text-primary hover:bg-primary-dark hover:border-primary-dark hover:text-white font-bold px-8 py-4 rounded-lg flex items-center gap-3 transition"
				>
					<Icon name="bi:envelope-fill" class="text-xl" />
					Contact Us
				</a>
			</div>
		</div>
	</div>
</section>

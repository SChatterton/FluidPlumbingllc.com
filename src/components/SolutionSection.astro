---
export interface StatItem {
  value: string;        // contoh: "99%" atau "24–48h"
  label: string;        // contoh: "Equipment Reliability"
}

export interface Props {
  label?: string;
  title?: string;

  problemTitle?: string;
  problemText?: string;

  solutionTitle?: string;
  solutionText?: string;

  stats?: StatItem[];

  image?: string;
  imageAlt?: string;
}

const {
  label = "PROBLEM & SOLUTION",
  title = "SOLVING MAJOR CHALLENGES",

  problemTitle = "The Problem",
  problemText = `
    Many construction companies struggle with equipment downtime, project delays, and inconsistent operator skill levels. 
    Unreliable machinery and slow mobilization often lead to cost overruns and compromised safety on job sites.
  `,

  solutionTitle = "Our Solution",
  solutionText = `
    Megarent Constructors delivers a high-performing fleet, rapid nationwide deployment, and fully certified operators. 
    We eliminate operational bottlenecks by ensuring every machine is maintained to industry standards and ready for immediate use—reducing downtime, improving job-site efficiency, and keeping projects on schedule.
  `,

  stats = [
    { value: "99%", label: "Equipment Reliability" },
    { value: "24–48h", label: "Fast Deployment" },
    { value: "30%", label: "Reduced Delays" },
  ],

  image = "/img/services.jpg",
  imageAlt = "Problem & Solution",
} = Astro.props;
---

<section class="py-20 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- LEFT CONTENT -->
      <div>
        <!-- LABEL -->
        {label && (
          <div class="inline-block px-4 py-2 bg-primary-soft text-primary-dark rounded-full font-semibold mb-6">
            {label}
          </div>
        )}
        <!-- TITLE -->
        {title && (
          <h2 class="font-display text-4xl md:text-5xl text-dark mb-6">
            {title}
          </h2>
        )}
        <!-- PROBLEM -->
        <p class="text-lg text-dark font-semibold mb-2">{problemTitle}</p>
        <p class="text-lg text-steel-gray mb-6">{problemText}</p>
        <!-- SOLUTION -->
        <p class="text-lg text-dark font-semibold mb-2">{solutionTitle}</p>
        <p class="text-lg text-steel-gray mb-8">{solutionText}</p>
        <!-- SUPPORTING STATS -->
        <div class="grid grid-cols-3 gap-8">
          {stats.map((s) => (
            <div>
              <div class="text-4xl font-display text-primary font-bold">{s.value}</div>
              <p class="text-steel-gray">{s.label}</p>
            </div>
          ))}
        </div>
      </div>
      <!-- RIGHT IMAGE -->
      <div>
        <img
          src={image}
          alt={imageAlt}
          class="rounded-2xl shadow-2xl"
        />
      </div>
    </div>
  </div>
</section>
---
export interface StatItem {
	number: number;
	suffix?: string;
	label: string;
	class?: string;
}

export interface Props {
	stats?: StatItem[];
	bgClass?: string;
}

const {
	stats = [
		{ number: 450, suffix: "+", label: "Residential & Commercial Projects" },
		{ number: 10, suffix: "+", label: "Years of Plumbing Expertise" },
		{ number: 5, label: "Star Ratings across Google & Yelp" },
	],
	bgClass = "bg-dark-deep",
} = Astro.props;
---

<section class={`${bgClass} relative`}>
	<div class="max-w-7xl mx-auto relative px-4 py-12">
		<div class="grid grid-cols-1 sm:grid-cols-3 gap-8">
			{stats.map((s) => (
				<div class={`text-center ${s.class ?? ""}`}>
					
					<!-- Animated Number -->
					<div
						class="stat-number font-display text-primary mb-2"
						data-animate
						data-counter={s.number}
						data-duration="2000"
						data-prefix=""
						data-suffix={s.suffix ?? ""}
					>
						0
					</div>

					<p class="text-metal-gray font-medium">{s.label}</p>
				</div>
			))}
		</div>
	</div>
</section>
---
import Header from '@src/components/Header.astro'
import Footer from '@src/components/Footer.astro'
import { Icon } from 'astro-icon/components'

import 'glightbox/dist/css/glightbox.min.css'
import '@src/styles/style.css'

interface Props {
	title: string
	description?: string
}

const {
	title,
	description = 'Need a reliable plumber in Dayton or Kettering? Fluid Plumbing offers honest pricing, fast, clean service â€” $50 off first-time customers!'
} = Astro.props
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>{title ? `${title} | Fluid Plumbing` : 'Fluid Plumbing | Residential Plumber in Dayton & Kettering'}</title>

		<!-- Primary Meta -->
		<meta name="description" content={description} />
		<meta name="author" content="Fluid Plumbing LLC" />
		<meta name="robots" content="index, follow" />

		<link rel="canonical" href={Astro.url?.href || 'https://fluidplumbingllc.com'} />
		<link rel="icon" type="image/x-icon" href="/img/favicon.png" />

		<link rel="sitemap" href="/sitemap-index.xml" />

		<link rel="preload" href="/fonts/BebasNeue-Regular.woff2" as="font" type="font/woff2" crossorigin />
	</head>

	<body class="font-sans bg-white overflow-x-hidden">
		<Header />
		<main>
			<slot />
		</main>
		<Footer />

		<!-- Alpine.js -->
		<script>
			import Alpine from 'alpinejs'
			declare global {
				interface Window {
					Alpine: typeof Alpine
				}
			}
			window.Alpine = Alpine
			Alpine.start()
		</script>

		{
			/* 
		<!-- Google tag (gtag.js) -->
		<!-- <script is:inline src="https://www.googletagmanager.com/gtag/js?id=AW-16506311868" async></script> -->
		<!-- <script>
			// @ts-nocheck
			window.dataLayer = window.dataLayer || []
			
			function gtag(...args) {
				dataLayer.push(args)
			}

			gtag('js', new Date())
			gtag('config', 'AW-16506311868')
		</script> -->
		*/
		}
		<!-- Google tag (gtag.js) -->
		<script is:inline async src="https://www.googletagmanager.com/gtag/js?id=G-T4ETQX15RT"></script>
		<script>
			// @ts-nocheck
			window.dataLayer = window.dataLayer || []
			function gtag() {
				dataLayer.push(arguments)
			}
			gtag('js', new Date())

			gtag('config', 'G-T4ETQX15RT')
		</script>

		<!-- GLightbox -->
		<script>
			import GLightbox from 'glightbox'

			const hasLightbox = document.querySelector('.glightbox')
			if (hasLightbox) {
				GLightbox({
					selector: '.glightbox',
					touchNavigation: true,
					loop: true
				})
			}
		</script>

		<script src="@src/scripts/animation.ts"></script>
	</body>
</html>
